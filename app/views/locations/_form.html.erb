<%= form_with model: @location, local: true do |form| %>

  <% if @location.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@location.errors.count, "error") %> prohibited
        this location from being saved:
      </h2>
      <ul>
        <% @location.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>
 
  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>

  <div class="custom-file">
    <%= form.label :image, class: 'custom-file-label' %>
    <%= form.file_field :image, class: 'custom-file-input', id: 'customFile' %>
  </div>

  <div>
    <%= form.submit class: 'btn btn-success my-2' %>
  </div>
<% end %>